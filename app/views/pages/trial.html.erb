<div class = "background">
    <div class="container-fluid">

      <div class="navbar-header">
        <a href="/"><img class= "col-xs-3 logo" src="images/logo1.png" alt="logo Skiller"></a>
        <a class="btn col-xs-offset-4 col-md-offset-6 col-xs-5 col-md-3 contact_button" href="contact.html">NOUS CONTACTER</a>
      </div>

         <%= flash[:success].to_s.html_safe %>

      <%= form_tag "/trial", method: "post" do %>
      <div class="form-horizontal contact_form col-xs-offset-1 col-xs-10 contact_form col-sm-offset-3 col-sm-6 contact_form col-md-offset-4 col-md-4">
        <fieldset>
          <!-- Form Name -->
          <legend class= "legend_form_1">Testez les compétences de vos candidats</legend>
          <p class="legend_form_2">Remplissez ce formulaire pour obtenir 2 mois d'essai gratuits</p>

          <!-- Text input-->
          <div class="form-group">
            <div class="col-xs-6">
              <input id="first_name" name="first_name" type="text" placeholder="Prénom" class="form-control input-md" required="">
            </div>

            <div class="col-xs-6">
              <input id="last_name" name="last_name" type="text" placeholder="Nom" class="form-control input-md" required="">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-12 control-label" for="company"></label>  
            <div class="col-md-12">
              <input id="company" name="company" type="text" placeholder="Société" class="form-control input-md" required="">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-12 control-label" for="email"></label>  
            <div class="col-md-12">
              <input id="email" name="email" type="text" placeholder="Adresse Email" class="form-control input-md" required="">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-12 control-label" for="phone"></label>
            <div class="col-md-12">
              <input id="phone" name="phone" type="text" placeholder="Téléphone" class="form-control input-md">
            </div>
          </div>

          <!-- Textarea -->
          <div class="form-group">
            <label class="col-md-12 control-label" for="skills"></label>
            <div class="col-md-12">                     
              <textarea class="form-control" id="skills" name="skills" placeholder = "Compétences voulant être testées (Optionnel)" rows="4"></textarea>
            </div>
          </div>

          <!-- Button -->
          <div class="form-group">
            <label class="col-md-4 control-label" for="submit"></label>
            <div class="col-md-4">
              <button type="submit" class="btn btn-default btn-submit">ENVOYER</button>
            </div>
          </div>

        </fieldset>
        </div>
      <% end %>

    </div>
    <footer>
      <p>Copyright &copy; 2017 Skills</p>
    </footer>
  </div>  
